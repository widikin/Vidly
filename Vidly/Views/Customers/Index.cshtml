<table class="table table-condensed table-responsive table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Discount Rate
            </th>
        </tr>
    </thead>
    @foreach (var customer in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model=> customer.Name)
            </td>
            <td>
                @Html.DisplayFor(model => customer.MembershipType.DiscountRate) %
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit",  new { id = customer.Id }) |
                @Html.ActionLink("Details", "Details", new { id = customer.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = customer.Id })
            </td>

        </tr>
    }

</table>